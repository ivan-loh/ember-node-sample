<div class="row">
  <div class="col-md-6">
    <h1>Contact</h1>
    <ul>
      <li>{{#link-to 'phone'}}Phone{{/link-to}}</li>
      <li>{{#link-to 'email'}}email{{/link-to}}</li>
    </ul>
    
    {{#if messageSent}}
    <p>Thank you. Your message has been sent, Your confirmation Number is {{confirmationNumber}}</p>
    {{else}}
    <p> or, <a href="#" {{action 'sendMessage'}}> click here!</a> to send a message</p>
    {{/if}}

  </div>
  <div class="col-md-6">
    {{outlet}}
  </div>
</div>
